<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.DameDame" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/main_white</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
        <item name="android:includeFontPadding">false</item>
        <item name="bottomSheetDialogTheme">@style/DameDameBottomSheetDialogStyle</item>
    </style>


    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_logo</item>
        <item name="windowSplashScreenAnimationDuration">300</item>
        <item name="windowSplashScreenBackground">@color/white</item>
        <item name="postSplashScreenTheme">@style/Theme.DameDame</item>
    </style>

    <style name="TextStyleBottomNavigationView">
        <item name="textAllCaps">false</item>
    </style>

    <style name="DameDameBottomSheetDialogStyle" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/ModalStyle</item>
    </style>

    <style name="ModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/shape_rect_white_fill_top_20</item>
    </style>

    <!-- 캐릭터 화면의 캐릭터 이름 텍스트 스타일 -->
    <style name="CharacterTextStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/jua</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- 제목 텍스트 볼드 -->
    <style name="TitleTextStyleBold">
        <item name="android:textSize">18sp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/jua</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- 제목 텍스트 노말 -->
    <style name="TitleTextStyleNormal">
        <item name="android:textSize">18sp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/gray_808080</item>
        <item name="android:fontFamily">@font/jua</item>
        <item name="android:textStyle">normal</item>
    </style>

    <!-- 상단 프로필 아이디 텍스트 볼드 -->
    <style name="ProfileIdTextStyleBold">
        <item name="android:textSize">16sp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/jua</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- 상단 둥근 모서리의 바텀 시트 다이얼로그 테마 -->
    <style name="AppBottomSheetDialogTheme" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_round_white_top_20_dp</item>
    </style>

    <style name="semi_bold_02">
        <item name="android:fontFamily">@font/jua</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">17sp</item>
        <item name="android:letterSpacing">-0.01</item>
        <item name="android:lineSpacingExtra">8.8sp</item>
    </style>

    <style name="medium_02">
        <item name="android:fontFamily">@font/jua</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="regular_03">
        <item name="android:fontFamily">@font/jua</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:lineSpacingExtra">8.4sp</item>
    </style>

</resources>