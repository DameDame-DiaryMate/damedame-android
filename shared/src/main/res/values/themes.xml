<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- 캐릭터 화면의 캐릭터 이름 텍스트 스타일 -->
    <style name="CharacterTextStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/jua</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- 제목 텍스트 볼드 -->
    <style name="TitleTextStyleBold">
        <item name="android:textSize">18sp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/jua</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- 제목 텍스트 노말 -->
    <style name="TitleTextStyleNormal">
        <item name="android:textSize">18sp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/gray_808080</item>
        <item name="android:fontFamily">@font/jua</item>
        <item name="android:textStyle">normal</item>
    </style>

</resources>