<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="360dp"
        android:layout_height="501dp"
        android:layout_marginTop="139dp"
        android:background="@drawable/popup_layout_bg">

        <ImageView
            android:id="@+id/character_popup_image"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="46dp"
            android:src="@drawable/character_cloud"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/character_popup_characterName"
            android:layout_width="85dp"
            android:layout_height="19dp"
            android:fontFamily="@font/jua"
            android:text="구름이"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginLeft="25dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/character_popup_image"
            android:gravity="center"/>
        <TextView
            android:id="@+id/character_popup_explanation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="구름이는 착한 친구다.\n\n구름이는 귀엽다\n\n선택하길 바란다.\n\n자주 밥을 먹어야 한다.\n\n조용한 곳을 좋아한다."
            android:textColor="#808080"
            android:textSize="14sp"
            android:fontFamily="@font/jua"
            android:layout_marginLeft="25dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="42dp"
            app:layout_constraintTop_toBottomOf="@id/character_popup_characterName"/>
        <Button
            android:layout_width="335dp"
            android:layout_height="60dp"
            android:background="@drawable/popup_layout_button_bg"
            android:text="선택"
            android:textSize="14sp"
            android:textColor="#ffffff"
            android:fontFamily="@font/jua"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="60dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/character_popup_explanation"/>



    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
