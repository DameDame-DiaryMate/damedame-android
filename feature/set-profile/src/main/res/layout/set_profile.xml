<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f3f3ed">

        <TextView
            android:id="@+id/firstrowtext1"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginTop="56dp"
            android:layout_marginLeft="142dp"
            android:fontFamily="@font/jua"
            android:text="아이디"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:gravity="center"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/firstrowtext2"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/firstrowtext2"
            android:layout_width="46dp"
            android:layout_height="44dp"
            android:layout_marginTop="56dp"
            android:fontFamily="@font/jua"
            android:text="입력과"
            android:textAlignment="center"
            android:textColor="#808080"
            android:textSize="18sp"
            android:gravity="center"
            app:layout_constraintLeft_toRightOf="@id/firstrowtext1"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:id="@+id/secondrow1"
            android:layout_width="77dp"
            android:layout_height="44dp"
            android:layout_marginLeft="87dp"
            android:fontFamily="@font/jua"
            android:text="프로필 사진"
            android:gravity="center"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/firstrowtext2"
            app:layout_constraintTop_toBottomOf="@id/firstrowtext1" />

        <TextView
            android:id="@+id/secondrow2"
            android:layout_width="106dp"
            android:layout_height="44dp"
            app:layout_constraintTop_toBottomOf="@id/firstrowtext1"
            app:layout_constraintLeft_toRightOf="@id/secondrow1"
            android:gravity="center"
            android:text="을 등록해주세요"
            android:textSize="18sp"
            android:fontFamily="@font/jua"
            android:textColor="#808080"/>

        <ImageView
            android:id="@+id/profileImage"
            android:layout_width="140dp"
            android:layout_height="139dp"
            app:srcCompat="@android:drawable/ic_menu_camera"
            android:layout_marginTop="61dp"
            android:layout_marginLeft="106dp"
            android:layout_marginRight="115dp"
            app:layout_constraintTop_toBottomOf="@id/secondrow2"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/profileNameTextLayout"
            app:counterEnabled="true"
            app:counterMaxLength="10"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="63dp"
            android:layout_marginLeft="26dp"
            android:layout_marginRight="33dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/profileImage">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="\@"
                android:textSize="20dp"
                android:fontFamily="@font/jua"/>

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/profileName"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/jua"
                android:textSize="20dp"
                android:inputType="textPersonName"
                android:hint="이름을 입력하시오." />



        </com.google.android.material.textfield.TextInputLayout>


        <Button
            android:id="@+id/setProfileBtn"
            android:layout_width="335dp"
            android:layout_height="60dp"
            android:layout_marginTop="101dp"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="12dp"
            android:layout_marginBottom="50dp"
            app:layout_constraintTop_toBottomOf="@id/profileNameTextLayout"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:text="다음"
            android:textSize="14sp"
            android:fontFamily="@font/jua"
            android:textColor="#FFFFFF"
            android:background="@drawable/set_profile_button_bg"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
