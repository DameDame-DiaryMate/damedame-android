<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/SearchProfileView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f3f3ed">

        <ImageView
            android:id="@+id/friendsOptionButton"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="26dp"
            android:src="@drawable/ic_setting"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <ImageView
            android:id="@+id/profileImage"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="33dp"
            android:layout_marginTop="83dp"
            android:src="@drawable/img_profile_tmp_01"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/numberOfRaisedCharacterText"
            android:layout_width="45dp"
            android:layout_height="22dp"
            android:layout_marginStart="255dp"
            android:layout_marginTop="119dp"
            android:fontFamily="@font/jua"
            android:text="친구"
            android:textAlignment="center"
            android:textColor="#808080"
            android:textSize="14sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/numberOfFriendText"
            android:layout_width="30dp"
            android:layout_height="22dp"
            android:layout_marginStart="262dp"
            android:layout_marginTop="91dp"
            android:fontFamily="@font/jua"
            android:text="24"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="20dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/raisedCharactersText"
            android:layout_width="45dp"
            android:layout_height="22dp"
            android:layout_marginStart="157dp"
            android:layout_marginTop="119dp"
            android:fontFamily="@font/jua"
            android:text="도감"
            android:textAlignment="center"
            android:textColor="#808080"
            android:textSize="14sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/friendsText"
            android:layout_width="30dp"
            android:layout_height="22dp"
            android:layout_marginStart="164dp"
            android:layout_marginTop="91dp"
            android:fontFamily="@font/jua"
            android:text="4"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="20dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/friendNickName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="144dp"
            android:fontFamily="@font/jua"
            android:gravity="center_horizontal"
            android:text="\@jihwan"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="normal"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <ImageView
            android:id="@+id/friendDeleteButton"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginLeft="300dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/ic_frplus"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/friendsOptionButton" />
        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:textSize="30sp"
            android:fontFamily="@font/jua"
            android:text="친구 추가가 되어야\n \n일기를 확인 할 수 있어요"
            android:textAlignment="center"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/profileImage"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
