<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="23dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/rowBackground"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/bg_radius_button"
            android:backgroundTint="#FFFFFF">

            <ImageView
                android:id="@+id/friendProfileImage"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="17dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/img_profile_tmp_01"
                app:layout_constraintLeft_toLeftOf="@+id/rowBackground"
                app:layout_constraintTop_toTopOf="@id/rowBackground" />

            <TextView
                android:id="@+id/friendNameText"
                android:layout_width="110dp"
                android:layout_height="23dp"
                android:layout_marginStart="70dp"
                android:layout_marginTop="19dp"
                android:fontFamily="@font/jua"
                android:text="james78"
                android:textColor="#000000"
                app:layout_constraintStart_toStartOf="@id/rowBackground"
                app:layout_constraintTop_toTopOf="@id/rowBackground" />

            <ImageView
                android:id="@+id/friendProfileButtonImage"
                android:layout_width="24dp"
                android:layout_height="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="15dp"
                android:src="@drawable/img_profile_tmp_01"
                app:layout_constraintEnd_toEndOf="@id/rowBackground"
                app:layout_constraintTop_toTopOf="@id/rowBackground" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </LinearLayout>
</layout>