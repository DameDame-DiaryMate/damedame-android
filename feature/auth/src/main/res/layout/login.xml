<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f3f3ed">

        <ImageView
            android:id="@+id/loginImageView"
            android:layout_width="278dp"
            android:layout_height="185dp"
            android:src="@drawable/img_character_01"
            android:layout_marginTop="62dp"
            android:layout_marginLeft="41dp"
            android:layout_marginRight="41dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
        <TextView
            android:id="@+id/loginTextViewColor"
            android:layout_width="145dp"
            android:layout_height="44dp"
            android:layout_marginTop="73dp"
            android:layout_marginLeft="93dp"
            android:layout_marginRight="123dp"
            app:layout_constraintTop_toBottomOf="@+id/loginImageView"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:text="나만의 일기"
            android:fontFamily="@font/jua"
            android:textColor="#DC9B8C"
            android:textSize="32.7sp"/>
        <TextView
            android:layout_width="27dp"
            android:layout_height="44dp"
            android:text="를"
            android:textSize="32.7sp"
            android:textColor="#000000"
            android:fontFamily="@font/jua"
            android:layout_marginTop="73dp"
            app:layout_constraintTop_toBottomOf="@+id/loginImageView"
            app:layout_constraintLeft_toRightOf="@+id/loginTextViewColor"/>

        <TextView
            android:id="@+id/loginTextViewNomal"
            android:layout_width="135dp"
            android:layout_height="44dp"
            android:layout_marginLeft="113dp"
            android:layout_marginRight="112dp"
            app:layout_constraintTop_toBottomOf="@+id/loginTextViewColor"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:text="키워보아요"
            android:textSize="32.7sp"
            android:textColor="#000000"
            android:fontFamily="@font/jua"/>

        <ImageView
            android:id="@+id/login"
            android:layout_width="335dp"
            android:layout_height="60dp"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="120dp"
            android:scaleType="fitXY"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/loginTextViewNomal" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
